{
  "version": 6,
  "configurePresets": [
    {
      "name": "linux-debug",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-release",
      "binaryDir": "${sourceDir}/build/windows",
      "cacheVariables": {
        "WINDOWS_CROSS_BUILD": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-release"
    }
  ],
  "workflowPresets": [
    {
      "name": "linux-debug",
      "steps": [
        { "type": "configure", "name": "linux-debug" },
        { "type": "build", "name": "linux-debug" }
      ]
    },
    {
      "name": "linux-release",
      "steps": [
        { "type": "configure", "name": "linux-release" },
        { "type": "build", "name": "linux-release" }
      ]
    },
    {
      "name": "windows-release",
      "steps": [
        { "type": "configure", "name": "windows-release" },
        { "type": "build", "name": "windows-release" }
      ]
    }
  ]
}
